<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewmodel"
                type="com.pixelart.notedock.viewModel.settings.AccountSettingsViewModel" />
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragment.settings.AccountSettingsFragment">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#E6FFFFFF"
                android:elevation="8dp"
                app:menu="@menu/folder_view_menu"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:onBackClicked="@{() -> viewmodel.onBackPressed()}"
                app:title="@string/account"
                app:titleTextColor="@color/colorPrimary" />

    </FrameLayout>
</layout>