<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
                name="viewmodel"
                type="com.pixelart.notedock.viewModel.folder.FoldersViewFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_marginStart="8dp"
            >
        <TextView
                android:id="@+id/textViewEditFolder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_edit"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:drawablePadding="8dp"
                android:text="@string/action_edit_folder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingBottom="20dp"
                />
        <TextView
                android:id="@+id/textViewDeleteFolder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_delete"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:drawablePadding="8dp"
                android:text="@string/action_delete_folder"
                android:paddingBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewEditFolder"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
