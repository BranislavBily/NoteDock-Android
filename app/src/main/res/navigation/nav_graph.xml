<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/foldersViewFragment">

    <fragment
            android:id="@+id/foldersViewFragment"
            android:name="com.pixelart.notedock.fragment.FoldersViewFragment"
            android:label="NoteDock"
            tools:layout="@layout/fragment_folders_view" >
        <action
                android:id="@+id/action_foldersViewFragment_to_folderFragment"
                app:destination="@id/folderFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
            android:id="@+id/folderFragment"
            android:name="com.pixelart.notedock.fragment.FolderFragment"
            android:label="Notes"
            tools:layout="@layout/fragment_folder" >

        <argument
                android:name="folderUUID"
                app:argType="string"
                />
        <action
                android:id="@+id/action_folderFragment_to_noteFragment"
                app:destination="@id/noteFragment"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@+id/noteFragment" />
    </fragment>
    <fragment
            android:id="@+id/noteFragment"
            android:name="com.pixelart.notedock.fragment.NoteFragment"
            android:label="Note">

        <argument
                android:name="folderUUID"
                app:argType="string" />

        <argument
                android:name="noteUUID"
                app:argType="string" />

    </fragment>

</navigation>